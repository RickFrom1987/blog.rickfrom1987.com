.timeline
  display none
  .experience
    position relative
    float left
    margin-left 18px
    margin-bottom 36px
    padding-left 36px
    // border-left 2px solid black-text
    .circle
      position absolute
      top 24px
      left -12px
      display block
      width 20px
      height 20px
      border 2px solid black-text
      -webkit-border-radius 50%
      -moz-border-radius 50%
      border-radius 50%
      background-color #F5F5F5
  
  .experience-info
    margin-left 100px
    h3
      margin-top 0
      font-weight 900

  .experience-img
    float left
    width 64px
    height 64px


@media (min-width 768px)
  .timeline
    display block