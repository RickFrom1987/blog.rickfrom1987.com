#contact-form
  text-transform uppercase
  font-family Montserrat,"Helvetica Neue",Helvetica,Arial,sans-serif
  font-weight 700
  letter-spacing 1px
  #contact-btn
    margin 0 auto
    display block
  .form-group
    position relative
    label
      display none
      font-size 18px
      line-height 24px
      font-weight 100
      text-transform uppercase
    [class*=fa]
      display block
      width 64px
      position absolute
      top 0
      color black-text
      font-size 24px
      line-height 54px
      text-align center
      font-weight 300
      opacity 0.5
      transition opacity .2s ease-out
  .form-control
    border none
    border-bottom 1px solid transparent
    border-radius 0
    outline none
    box-shadow none
    height 56px
    font-size 21px
    line-height 32px
    font-weight 100
    padding-left 64px
    -webkit-transition border-color .3s ease-out
    transition border-color .3s ease-out
    border-radius 2px
    &:focus
      background #fff
      outline none
      box-shadow none
      -webkit-transition border-color .3s ease-in
      transition border-color .3s ease-in
      & + [class*=fa]
        opacity 1
  textarea
    &.form-control
      height auto
      max-width 100%
      min-width 100%
      font-size 21px
      line-height 32px
      padding-top 10px
  .error-message
    padding 5px 0
    position absolute
    top -30px
    right 0
    font-size 14px
    font-weight 300
    color #ff0000
    z-index 10
    &:before
      content "\00d7"
      font-size 21px
      line-height 21px
      margin-right 5px


