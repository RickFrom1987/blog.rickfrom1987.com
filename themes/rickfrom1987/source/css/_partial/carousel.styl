.carousel
  position relative
  height 100%
  .carousel-inner
    z-index 0
    border-radius 8px
  .carousel-control
    display block
    position absolute
    top 0
    height 100%
    background-image none
    .carousel-left
    .carousel-right
      position absolute
      display block
      top 50%
      margin-top -25px
      height 50px
      z-index 999
      border-radius 8px
      font-size 50px
      width 100%


  .carousel-caption
    display block
    position absolute
    left 0
    top 0
    height 100%
    width 100%
    h1 
      position absolute
      width 100%
      top 50%
      margin-top -50px
      font-size 18px
      line-height 100px
      height 100px

@media (min-width 768px)
  .carousel
    .carousel-caption
      h1 
        font-size 24px